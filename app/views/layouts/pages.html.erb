            </div> <!-- #billboard -->

            <div class="clear">
                <!-- Use this to enforce bottom -->
            </div>
    	</div> <!-- #header -->

    	<div id="content">
            <%= flash[:notice] %>

        <!-- Main site content -->
        <%= yield %>

        </div> <!-- content -->

    	<div id="footer">
    	
    	    <div class="left">
    	    
    	
    		 <%= link_to "About", { :controller => "about" } %> | &copy; Copyright 2013 <a href="http://www.qubole.com">Qubole</a> </div> 
    		 
    		 <!-- left -->
	    
            <br/>
            <br/>
            <br/>

    	</div>  <!-- #footer -->

    </div> <!-- #wrapper -->
  </div> <!-- #container -->
</body>
